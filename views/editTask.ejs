<!-- views/addTask.ejs -->
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <!-- <h3 class="mb-4">Add Task</h3> -->
            <form action="#" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>

                <div class="mb-3">
                    <label for="module" class="form-label">Module</label>
                    <input type="text" class="form-control" id="module" name="module" required>
                </div>

                <div class="mb-3">
                    <label for="openedAt" class="form-label">Opened</label>
                    <input type="date" class="form-control" id="openedAt" name="openedAt" required>
                </div>

                <div class="mb-3">
                    <label for="closedAt" class="form-label">Closed</label>
                    <input type="date" class="form-control" id="closedAt" name="closedAt" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="file" class="form-label">Task File</label>
                    <input type="file" class="form-control" id="file" name="file" required>
                </div>

                <div class="d-flex justify-content-end">
                    <!-- <button type="button" class="btn btn-danger me-2">Cancel</button> -->
                    <a href="/cms/tasks" class="btn btn-danger me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
